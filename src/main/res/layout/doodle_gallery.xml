<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- ExtendedViewPager is a custom view and must be referred to by its full package name in XML -->

    <com.serveroverload.gallery.ui.customeview.ExtendedViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="#70000000"
        android:orientation="horizontal"
        android:weightSum="5" >

        <com.serveroverload.gallery.ui.customeview.TextAwesome
            android:id="@+id/canvas"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="@string/fa_paint_brush"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <com.serveroverload.gallery.ui.customeview.TextAwesome
            android:id="@+id/edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="@string/fa_magic"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <com.serveroverload.gallery.ui.customeview.TextAwesome
            android:id="@+id/info"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="@string/fa_info"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <com.serveroverload.gallery.ui.customeview.TextAwesome
            android:id="@+id/share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="@string/fa_share_alt"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <com.serveroverload.gallery.ui.customeview.TextAwesome
            android:id="@+id/delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="@string/fa_trash"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>

</FrameLayout>